<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ta.syifaul.akadoma">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".ApplicationClass">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".PengumumanDetailActivity"/>
        <activity android:name=".AgendaDetailActivity"/>
        <activity android:name=".JadwalSeminarTaActivity"/>
        <activity android:name=".JadwalSidangTaActivity"/>
        <activity android:name=".InputAgendaActivity"/>
        <activity android:name=".InputPengumumanActivity"/>
        <activity android:name=".InputJadwalSeminarTaActivity"/>
        <activity android:name=".InputJadwalSidangTaActivity"/>
        <activity android:name=".EditAgendaActivity"/>
        <activity android:name=".EditPengumumanActivity"/>
        <activity android:name=".EditJadwalSeminarTaActivity"/>
        <activity android:name=".EditJadwalSidangTaActivity"/>

        <receiver android:name=".util.AlarmReceiver"/>
        <service android:name=".util.AlarmNotificationService"/>

    </application>

</manifest>